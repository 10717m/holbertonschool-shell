#!/usr/bin/env python3

import sys

def rot13(text):
    result = []
    for char in text:
        if 'a' <= char <= 'z':
            # Shift within lowercase letters
            result.append(chr(((ord(char) - ord('a') + 13) % 26) + ord('a')))
        elif 'A' <= char <= 'Z':
            # Shift within uppercase letters
            result.append(chr(((ord(char) - ord('A') + 13) % 26) + ord('A')))
        else:
            # Leave non-alphabetic characters as they are
            result.append(char)
    return ''.join(result)

if __name__ == "__main__":
    if len(sys.argv) != 1:
        print("Usage: ./15-rot13")
        sys.exit(1)

    # Read input from stdin
    input_text = sys.stdin.read()
    # Apply ROT13
    output_text = rot13(input_text)
    # Print the result
    print(output_text, end='')
